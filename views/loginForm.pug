doctype html
html
	head
		title='Login'
		link(rel='stylesheet', href='/stylesheets/my_style.css')
	body
		form(
			role='form'
			action="/users/login"
			method="post"
		)
			center
				input.form-control(
					type='text'
					name='username'
					placeholder='Enter Username'
				)
				input.form-control(
					type='password'
					name='password'
					placeholder='Password'
				)
				br
				button.submit-button(type='submit') Login
				a(href='/users/register')
					button.register-button(type="button") Register
				br
				if (error)
					a(style='color: red') #{error}
