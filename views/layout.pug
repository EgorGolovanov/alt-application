doctype html
html
	head
		title='ALT-Application'
		link(rel='stylesheet', href='/stylesheets/my_style.css')
		link(rel='stylesheet', href='/css/bootstrap.css')
	body
		nav(class="navbar navbar-expand-lg navbar-light bg-light")
			button(
				class="navbar-toggler" 
				type="button" 
				data-toggle="collapse" 
				data-target="#navbarNavAltMarkup" 
				aria-controls="navbarNavAltMarkup" 
				aria-expanded="false" 
				aria-label="Toggle navigation"
			)
				span(class="navbar-toggler-icon")
			div(
				class="collapse navbar-collapse" 
				id="navbarNavAltMarkup"
			)
				div(class="navbar-nav")
					if (user)
						a(class="navbar-brand") Welcome, #{user.username}!
						a(href='/' class="nav-item nav-link") List
						a(href='/users/account' class="nav-item nav-link") Account
						a(href='/users/logout' class="nav-item nav-link") Logout
					if (!user)
						a(href='/users/login' class="nav-item nav-link") Login
						a(href='/users/register' class="nav-item nav-link") Register
		block content
